=render "shared/header"

section class="sites-list"
  .container
    table class="table"
      thead
        tr
          th Title
          th URL
          th Frequency
          th Status
          th Enabled
          th
      tbody
        - @sites.each do |site|
          tr
            th =site.title
            th =site.url
            th =site.frequency
            th =site.up
            th =site.enabled
            th class="buttons"
              = link_to 'Destroy', sites_path(site), method: :delete, data: { confirm: 'Are you sure?' }, remote: true
              = link_to 'Start', enable_monitoring_sites_path(site), remote: true
              = link_to 'Stop', disable_monitoring_sites_path(site), remote: true


.container
  =render partial: "sites/form", locals: {site: @site}
